<header>
    <a href="#" class="logo"><span>Library</span>App</a>
    <nav class="navbar">
        <a href="/users/profile">My profile</a>
        <a href="/users">Users</a>
        <a href="/works/rating">Ratings</a>
       <a href="/auth/logout">Logout</a>
    </nav>
</header>

<div class="profilebg">
    <div class="myprofile">
    <h1 class="userlist">User list</h1>
    {{#each user}}
    <div class="userlistbg">
        <div class="row">
            <div class="col-md-12">
                <div class="media">
                    <div class="media-body">
                        <h4 class="media-heading"><a href="/users/{{username}}">{{username}}</a></h4>
                        <h5 class="media-rating">User rating: {{rating}}</h5>
                        <h5 class="media-works">Works submited: {{works.length}}</h5>
                        <hr class="hrprofile2">
    <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Solo lectura -->


    {{/each}}
    </div>
</div>