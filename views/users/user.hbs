<header>
    <a href="#" class="logo"><span>Library</span>App</a>
    <nav class="navbar">
         <a href="/users/profile">My profile</a>
        <a href="/users">Users</a>
        <a href="/works/rating">Ratings</a>
        <a href="/auth/logout">Logout</a>
    </nav>
</header>

<div class="profilebg">
    <div class="myprofile">
        <h1 class="h1profile">Este es el perfil de {{user.username}}</h1>
        <br>
        <h2 class="h2profile">Valoracion media: {{user.rating}}</h2>
        <br>

      
        {{#if added}}
       
         <form class="rating" action="/users/{{user.username}}/delete" method="POST">
            <button type="submit">Delete Favorites</button>
        </form>
       {{else}}
        <form class="rating" action="/users/{{user.username}}/favorite" method="POST">
        <button type="submit">Add Favorites</button>
        </form>
        {{/if}}
       
       
        <form class="rating">
        <button onclick="myFunction()">Enviar email</button>
        </form>
        <form class="rating">
        <button onclick="myFunction2()">Donar</button>
        </form>
        <hr class="hrprofile">
        <br>

        {{#each user.works}}
        <br>
        <div class="episode__content">
            <h1 class="title">Name:</h1>
            <p class="story">{{this.name}}</p>
            <h1 class="title">Type:</h1>
            <p class="story">{{this.type}}</p>
            <h1 class="title">Genre:</h1>
            <p class="story">{{this.genre}}</p>
            <h1 class="title">Language:</h1>
            <p class="story">{{this.language}}</p>
            <h1 class="title">Description:</h1>
            <p class="story">{{this.description}}</p>
            <h1 class="title">Average Rating:</h1>
            <p class="story">{{this.avRating}}</p>
            <!-- Solo lectura -->
            <a href="/works/work/{{this.id}}" class="btnprofile">Work</a>
            <br>
        </div>
        {{/each}}
    </div>
</div>

<script>
function myFunction() {
  alert("Email sent");
}

function myFunction2() {
  alert("Me acabas de pagar la hipoteca, cuidado donde donas.");
}
</script>